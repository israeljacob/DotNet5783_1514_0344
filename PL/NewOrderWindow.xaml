<Window x:Class="PL.NewOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="NewOrderWindow" Height="450" Width="800">
    <Grid>
        <Grid Name="MainGrid1" Style="{StaticResource FancyGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="500*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Style="{StaticResource SecondGridForList}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions >
                <ComboBox Name="CategorySelector" Style="{StaticResource ComboBoxForList}"
                          Grid.ColumnSpan="2">
                    <ComboBox.Effect>
                        <DropShadowEffect/>
                    </ComboBox.Effect>
                </ComboBox>
                <Label x:Name="ComboboxLabal" Content="Category:" FontSize="24" />
            </Grid>
            <ListView  x:Name="ProductItemListview" Background="#FF827E79" FontSize="20" ItemsSource="{Binding Mode=OneWay}"
                       Foreground="Black" FontFamily="Sitka Small Semibold" Margin="132,32,131,10" Grid.RowSpan="2" Grid.Row="1" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Product Id" Width="auto" DisplayMemberBinding="{Binding UniqID}"></GridViewColumn>
                        <GridViewColumn Header="Category" Width="auto" DisplayMemberBinding="{Binding Category}"></GridViewColumn>
                        <GridViewColumn Header="Name" Width="auto" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                        <GridViewColumn Header="Price" Width="auto" DisplayMemberBinding="{Binding Price}"></GridViewColumn>
                        <GridViewColumn Header="In stock" Width="auto" DisplayMemberBinding="{Binding InStock}"></GridViewColumn>
                        <GridViewColumn Header="Amount" Width="auto" DisplayMemberBinding="{Binding Amount}"></GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="2,2,500,480"/>
                </ListView.Clip>
            </ListView>
            <Button x:Name="AddProduct" Content="Add new product" Grid.Row="2" 
                    HorizontalAlignment="Left" Margin="601,10,0,-5" Padding="5" 
                    FontFamily="Sitka Small Semibold" FontSize="20" Width="195" Background="#FF839ED4">
                <Button.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="2,2,190,25"/>
                </Button.Clip>
            </Button>
            <Button x:Name="back" Content="back" Grid.Row="2" 
                HorizontalAlignment="Left" Margin="18,10,0,-5" Padding="5" FontFamily="Sitka Small Semibold" FontSize="20" Width="195" Background="#FF839ED4">
                <Button.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="2,2,190,25"/>
                </Button.Clip>
            </Button>
        </Grid>
    </Grid>
</Window>
