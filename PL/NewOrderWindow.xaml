<Window x:Class="PL.NewOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="NewOrderWindow" Height="450" Width="800">
    <Grid>
        <Grid Style="{StaticResource FancyGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="500*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Style="{StaticResource SecondGridForList}">
                <ComboBox Style="{StaticResource ComboBoxForList}" ItemsSource="{Binding Categories}" Height="29" Margin="172,0,236,0" VerticalAlignment="Center" SelectionChanged="CategorySelector_SelectionChanged">
                    <ComboBox.Effect>
                        <DropShadowEffect/>
                    </ComboBox.Effect>
                </ComboBox>
                <Label Content="Category:" FontSize="18" Background="#FFE8E4E4" Margin="32,1,613,-1" Padding="25,0,0,5"/>
            </Grid>
            <ListView Background="#FF827E79" FontSize="16" ItemsSource="{Binding ProductItems,Mode=TwoWay}" Width="650"
                       Foreground="Black" FontFamily="Sitka Small Semibold" Margin="116,29,34,0" Grid.RowSpan="2" SelectionChanged="ProductItemListview_SelectionChanged"  >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Product Id" Width="auto" DisplayMemberBinding="{Binding UniqID}"></GridViewColumn>
                        <GridViewColumn Header="Category" Width="auto" DisplayMemberBinding="{Binding Category}"></GridViewColumn>
                        <GridViewColumn Header="Name" Width="auto" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                        <GridViewColumn Header="Price" Width="auto" DisplayMemberBinding="{Binding Price}"></GridViewColumn>
                        <GridViewColumn Header="In stock" Width="auto" DisplayMemberBinding="{Binding InStock}"></GridViewColumn>
                        <GridViewColumn Header="Amount" Width="auto" DisplayMemberBinding="{Binding Amount}"></GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="2,2,500,480"/>
                </ListView.Clip>
            </ListView>
            <Button Content="back" Grid.Row="2" Click="back_Click"
                HorizontalAlignment="Left" Margin="18,10,0,-5" Padding="5" FontFamily="Sitka Small Semibold" FontSize="20" Width="195" Background="#FF839ED4">
                <Button.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="2,2,190,25"/>
                </Button.Clip>
            </Button>
        </Grid>
    </Grid>
</Window>
