<Window x:Class="PL.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800">
    <Grid x:Name="myGrid" Style="{StaticResource FancyGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Id:" HorizontalAlignment="Left" Margin="231,0,0,0"
               VerticalAlignment="Center" Width="116" FontSize="18" Foreground="White" FontFamily="Sitka Small Semibold" Height="38"/>
        <Label Foreground="White" FontFamily="Sitka Small Semibold" Content="Name:" HorizontalAlignment="Left" Margin="231,0,0,0"
            VerticalAlignment="Center" Width="116" FontSize="18" Grid.Row="1"/>
        <Label Content="Mail:" HorizontalAlignment="Left" Foreground="White" FontFamily="Sitka Small Semibold" Margin="231,0,0,0"
            VerticalAlignment="Center" Width="116" FontSize="18" Grid.Row="2"/>
        <Label Content="Addres" Foreground="White" FontFamily="Sitka Small Semibold" HorizontalAlignment="Left" Margin="231,0,0,0"
            VerticalAlignment="Center" Width="116" FontSize="18" Grid.Row="3"/>
        <Label Content="Status" HorizontalAlignment="Left" Foreground="White" FontFamily="Sitka Small Semibold" Margin="231,0,0,0"
            VerticalAlignment="Center" Width="116" FontSize="18" Grid.Row="4"/>
        <Label Content="Total price" HorizontalAlignment="Left" Foreground="White" FontFamily="Sitka Small Semibold" Margin="231,0,0,0"
            VerticalAlignment="Center" Width="116" FontSize="18" Grid.Row="5"/>
        <Label Content="Items:" HorizontalAlignment="Left" Foreground="White" FontFamily="Sitka Small Semibold"
            VerticalAlignment="Top" Width="116" FontSize="18" Grid.Row="6"/>
        <Label x:Name="idtxt" Grid.Column="1" HorizontalAlignment="Left" Content="{Binding UniqID}"
                 VerticalAlignment="Top" Width="120" PreviewTextInput="int_PreviewTextInput" Height="35"
                 Background="#FF252525" Foreground="White" FontSize="18" FontFamily="Sitka Small Semibold"/>
        <Label x:Name="NameText" Grid.Column="1" HorizontalAlignment="Left" Content="{Binding CostemorName}"
            VerticalAlignment="Center" Width="120" PreviewTextInput="int_PreviewTextInput" Height="38"
            Background="#FF252525" Foreground="White" FontSize="18" FontFamily="Sitka Small Semibold" Grid.Row="1"/>
        <Label x:Name="MailText" Grid.Column="1" HorizontalAlignment="Left" Content="{Binding CostemorMail}"
            VerticalAlignment="Center" Width="120" PreviewTextInput="int_PreviewTextInput" Height="38"
            Background="#FF252525" Foreground="White" FontSize="18" FontFamily="Sitka Small Semibold" Grid.Row="2"/>
        <Label x:Name="AddText" Grid.Column="1" HorizontalAlignment="Left" Content="{Binding CostemorAddres}"
            VerticalAlignment="Center" Width="120" PreviewTextInput="int_PreviewTextInput" Height="38"
            Background="#FF252525" Foreground="White" FontSize="18" FontFamily="Sitka Small Semibold" Grid.Row="3"/>
        <TextBox x:Name="StatusTB" Grid.Column="1" PreviewTextInput="name_PreviewTextInput" HorizontalAlignment="Left" 
                 TextWrapping="Wrap" Text="{Binding StatusOfOrder, Mode=TwoWay}" VerticalAlignment="Center" Width="120"  
                 Height="40" Grid.Row="4"  Background="#FF252525" Foreground="White" FontSize="18" FontFamily="Sitka Small Semibold"/>
        <TextBox x:Name="TotalPriceTB" Grid.Column="1" PreviewTextInput="name_PreviewTextInput" HorizontalAlignment="Left" 
            TextWrapping="Wrap" Text="{Binding TotalPrice, Mode=TwoWay}" VerticalAlignment="Center" Width="120"  
            Height="40" Grid.Row="5"  Background="#FF252525" Foreground="White" FontSize="18" FontFamily="Sitka Small Semibold"/>
        
        <Button x:Name="UpdateButton" FontFamily="Sitka Small Semibold" Content="Update"
                HorizontalAlignment="Left" Margin="328,163,0,0" Grid.Row="6" VerticalAlignment="Top"
                 Click="UpdateButton_Click"  Width="72" Height="34" Grid.Column="1">
            <Button.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="1,1,70,30"/>
            </Button.Clip>
        </Button>
    </Grid>
</Window>
